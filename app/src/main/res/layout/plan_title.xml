<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mainback">
    <RelativeLayout
        android:id="@+id/nextListTop"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/plan_toolbar"
        android:background="#fff" >
        <TextView
            android:id="@+id/plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="15dp"
            android:text="当前计划："
            android:textColor="#666666"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="15dp"
            android:text="当前计划状态："
            android:textColor="#666666"
            android:textSize="13sp"
            android:layout_below="@+id/plan"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_below="@+id/text4"
            android:layout_marginTop="11dp"
            android:text="正确率："
            android:textColor="#666666"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/plan_accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text1"
            android:layout_alignBottom="@+id/text1"
            android:layout_toRightOf="@+id/text1"
            android:text="00.00%"
            android:textColor="#82d843"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/plan_accuracy"
            android:layout_alignBottom="@+id/plan_accuracy"
            android:layout_toRightOf="@+id/plan_accuracy"
            android:text=";  当前已完成"
            android:textColor="#666666"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/plan_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text2"
            android:layout_alignBottom="@+id/text2"
            android:layout_toRightOf="@+id/text2"
            android:text="0"
            android:textColor="#888888"
            android:textSize="13dp" />
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/plan_cycle"
            android:layout_alignBottom="@+id/plan_cycle"
            android:layout_toRightOf="@+id/plan_cycle"
            android:text="个周期，错误"
            android:textColor="#666666"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/plan_wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text3"
            android:layout_toRightOf="@+id/text3"
            android:text="0"
            android:textColor="#666666"
            android:textSize="13dp" />
        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/plan_wrong"
            android:layout_alignBottom="@+id/plan_wrong"
            android:layout_toRightOf="@+id/plan_wrong"
            android:text="个"
            android:textColor="#666666"
            android:textSize="13sp" />

    </RelativeLayout>
    <View
        android:id="@+id/line7"
        android:layout_below="@+id/nextListTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="0dp"
        android:background="#cccccc" />
    <View
        android:id="@+id/line8"
        android:layout_below="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="#cccccc" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="36dp"
        android:background="#fff"
        android:layout_below="@+id/line8">
        <TextView
            android:id="@+id/rangestitle"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="计划期间"
            android:layout_marginLeft="1dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_shadow"/>
        <TextView
            android:id="@+id/planstitle"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1.5"
            android:textSize="13sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_toRightOf="@+id/rangestitle"
            android:layout_marginLeft="2dp"
            android:text="计划方案"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_shadow"/>
        <TextView
            android:id="@+id/numstitle"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_toRightOf="@+id/planstitle"
            android:layout_marginLeft="2dp"
            android:text="开奖"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_shadow"/>
        <TextView
            android:id="@+id/resultstitle"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_toRightOf="@+id/numstitle"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp"
            android:text="结果"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_shadow"/>
    </LinearLayout>

</RelativeLayout>
