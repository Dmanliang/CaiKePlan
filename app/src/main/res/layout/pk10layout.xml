<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linearTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/home_title_pk10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="重庆时时彩"
            android:textColor="@color/blackText"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/home_date_end_pk10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_title"
            android:layout_marginLeft="9dp"
            android:text="第20170103001期"
            android:layout_gravity="center"
            android:textColor="@color/blackText"
            android:textSize="12sp" />
        <ImageView
            android:id="@+id/lottery_open_pk10"
            android:layout_width="38dp"
            android:layout_height="14dp"
            android:background="@drawable/img_lottory"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center"
            android:visibility="gone"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layoutCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearTitle"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="19dp">
        <ImageView
            android:id="@+id/type2_ball1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/type2_ball_1"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/type2_ball2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/type2_ball_2"
            android:layout_toRightOf="@+id/type2_ball1"
            android:layout_marginLeft="7dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/type2_ball3"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/type2_ball_3"
            android:layout_toRightOf="@+id/type2_ball2"
            android:layout_marginLeft="7dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/type2_ball4"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/type2_ball_4"
            android:layout_toRightOf="@+id/type2_ball3"
            android:layout_marginLeft="7dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/type2_ball5"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/type2_ball_5"
            android:layout_toRightOf="@+id/type2_ball4"
            android:layout_marginLeft="7dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/type2_ball6"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/type2_ball_6"
            android:layout_toRightOf="@+id/type2_ball5"
            android:layout_marginLeft="7dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/type2_ball7"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/type2_ball_7"
            android:layout_toRightOf="@+id/type2_ball6"
            android:layout_marginLeft="7dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/type2_ball8"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/type2_ball_8"
            android:layout_toRightOf="@+id/type2_ball7"
            android:layout_marginLeft="7dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/type2_ball9"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/type2_ball_9"
            android:layout_toRightOf="@+id/type2_ball8"
            android:layout_marginLeft="7dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/type2_ball10"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/type2_ball_10"
            android:layout_toRightOf="@+id/type2_ball9"
            android:layout_marginLeft="7dp"
            android:gravity="center"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lineaertime_pk10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutCenter"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="19dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/home_date_pk10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全天共开120期,当前51期,剩余69期"
            android:textColor="@color/grayDate"
            android:textSize="12sp" />
        <ImageView
            android:id="@+id/btn_video_pk10"
            android:layout_width="50dp"
            android:layout_height="23dp"
            android:background="@drawable/icon_video"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineaertime_pk10"
        android:orientation="horizontal"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="19dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距下期开奖仅有"
            android:textColor="@color/blackText"
            android:textSize="13sp"
            />
        <ProgressBar
            android:id="@+id/openTimeProgress_pk10"
            android:layout_width="135dp"
            android:layout_height="4dp"
            android:layout_marginLeft="9dp"
            android:layout_gravity="center_vertical"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar_drawable"
            android:max="100"
            android:progress="50"/>
        <TextView
            android:id="@+id/text_time_pk10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff2703"
            android:textSize="12sp"
            android:text="00:00"
            android:layout_marginLeft="9dp"/>
    </LinearLayout>
</RelativeLayout>
