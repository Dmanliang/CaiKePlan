<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_loginback">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_height="144dp"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_logo"
        android:layout_marginTop="74dp"
        />
    <LinearLayout
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_input">
            <ImageView
                android:id="@+id/icon_user"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_personal"/>
            <EditText
                android:id="@+id/edit_user"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:hint="请输入用户名"
                android:layout_toRightOf="@+id/icon_user"
                android:textColorHint="@color/whileDivider"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_input"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/icon_password"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_password"/>
            <EditText
                android:id="@+id/edit_password"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="30dp"
                android:background="@null"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:hint="登录密码(6-20位)"
                android:layout_toRightOf="@+id/icon_password"
                android:textColorHint="@color/whileDivider"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:maxLength="20"
                />
            <ImageView
                android:id="@+id/icon_eye"
                android:layout_width="16dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/icon_display"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_input"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/icon_provider"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_verification"/>
            <EditText
                android:id="@+id/edit_provider"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:hint="请输入图片验证码"
                android:layout_toRightOf="@+id/icon_provider"
                android:textColorHint="@color/whileDivider"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:imeOptions="actionGo"
                android:maxLength="4"
                />
            <ImageView
                android:id="@+id/showcode"
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_below="@+id/edit_layout"
        android:background="@drawable/shape_login"
        android:layout_marginTop="27dp"
        android:text="登录"
        android:textColor="@color/whileBack"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textSize="14sp"
        android:textColor="#d12d10"
        android:layout_alignRight="@+id/button_login"
        android:layout_below="@+id/button_login"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系QQ客服: 961820000"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"/>
    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackHalfAlphaBlack"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>