<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainback">

    <include
        android:id="@+id/person_toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/person_toolbar">
        <RelativeLayout
            android:id="@+id/username_layout"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="15dp"
            android:background="@color/whileBack">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/whileDivider"/>
            <ImageView
                android:id="@+id/icon_username"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/icon_username"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textSize="15sp"
                android:textColor="@color/blackText"
                android:layout_toRightOf="@+id/icon_username"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/person_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textSize="13sp"
                android:textColor="@color/blackText"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/whileDivider"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/endtime_layout"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/whileBack">
            <ImageView
                android:id="@+id/icon_endtime"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/icon_calendar"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到期时间"
                android:textSize="15sp"
                android:textColor="@color/blackText"
                android:layout_toRightOf="@+id/icon_endtime"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/duetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017/01/01 00:00:00"
                android:textSize="13sp"
                android:textColor="@color/red"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/whileDivider"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/resetpassword_layout"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/whileBack">
            <ImageView
                android:id="@+id/icon_resetpassword"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/icon_lock"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textSize="15sp"
                android:textColor="@color/blackText"
                android:layout_toRightOf="@+id/icon_resetpassword"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/whileDivider"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/whileBack"
            android:layout_marginTop="15dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/whileDivider"
                />
            <ImageView
                android:id="@+id/manager"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/icon_openuser"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户"
                android:textSize="15sp"
                android:textColor="@color/blackText"
                android:layout_toRightOf="@+id/manager"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"/>
            <Switch
                android:id="@+id/switch_manager_openuser"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:switchMinWidth="50dp"
                android:textOn="  "
                android:textOff="  "
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:thumb="@drawable/thumb"
                android:track="@drawable/track" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/whileDivider"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/person_update_button"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:text="确认修改"
            android:textSize="15dp"
            android:textColor="@color/whileText"
            android:background="@drawable/shape_check_button"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"/>
        <Button
            android:id="@+id/person_delete_button"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:text="删除用户"
            android:textSize="15dp"
            android:textColor="@color/balckText"
            android:background="@drawable/shape_while_button"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackHalfAlphaBlack"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>