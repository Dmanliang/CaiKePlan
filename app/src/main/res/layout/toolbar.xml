<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/toolbar_bg">
    <RelativeLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp">
        <LinearLayout
            android:id="@+id/program_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/back"
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:background="@drawable/btn_back"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/back_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textSize="14dp"
                android:textColor="#fff"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/play_select"
            android:layout_width="62dp"
            android:layout_height="16dp"
            android:text="个位分析"
            android:gravity="left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:textSize="14dp"
            android:background="@drawable/play_check_title"
            android:textColor="#fff"
            android:visibility="gone"/>
        
        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重庆时时彩"
                android:textSize="18dp"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id="@+id/title_arrow"
                android:layout_width="10dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:src="@drawable/btn_drop_down"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/toolbar_set"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="设置"
            android:textSize="14dp"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/toolbar_save"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="保存"
            android:textSize="14dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:visibility="gone"/>
        
        <ImageView
            android:id="@+id/btn_copy_plan"
            android:layout_width="61dp"
            android:layout_height="23dp"
            android:background="@drawable/btn_copy_plan"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:visibility="gone"/>
        
        <ImageView
            android:id="@+id/message"
            android:layout_width="23dp"
            android:layout_height="16dp"
            android:background="@drawable/icon_message"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/choice_collect"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_collect_choice"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>
