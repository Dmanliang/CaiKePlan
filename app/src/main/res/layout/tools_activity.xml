<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/mainback"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/toolbar"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        />
    <RelativeLayout
        android:id="@+id/calculat_layout"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:background="@color/whileBack">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/whileDivider"/>
        <ImageView
            android:id="@+id/icon_username"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ico_calculator"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计算器"
            android:textSize="15sp"
            android:textColor="@color/blackText"
            android:layout_toRightOf="@+id/icon_username"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:id="@+id/calculator_next"
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_next"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/whileDivider"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>