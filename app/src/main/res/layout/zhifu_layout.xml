<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">
    <RelativeLayout
        android:id="@+id/zhif_layout"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:background="@color/whileBack"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/paytitle_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/whileDivider"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择支付方式"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:textColor="@color/balckText"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/whileDivider"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
       <ListView
           android:id="@+id/pay_listview"
           android:layout_width="match_parent"
           android:layout_height="190dp"
           android:divider="@color/whileDivider"
           android:dividerHeight="0.1dp"
           android:layout_below="@+id/paytitle_layout"/>
    </RelativeLayout>
</RelativeLayout>