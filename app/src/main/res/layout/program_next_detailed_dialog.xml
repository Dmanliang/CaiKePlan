<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="225dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/title_copy"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:background="@drawable/head_item_bg"
            android:gravity="center"
            android:text="详细信息"
            android:textColor="@color/whileText"
            android:textSize="16sp"/>

        <com.example.caikeplan.logic.scrollview.BorderScrollView
            android:id="@+id/myScrollView"
            android:layout_width="270dp"
            android:layout_height="145dp"
            android:layout_below="@+id/title_copy"
            android:background="@color/white"
            android:scrollbarThumbVertical="@color/blueScroll"
            android:scrollbarSize="2dp">
            <LinearLayout
                android:id="@+id/copy_content"
                android:layout_width="270dp"
                android:layout_height="145dp"
                android:gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginRight="18dp">
                    <TextView
                        android:id="@+id/rangescolor"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:background="#1baaf4"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/copy_ranges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="期号:"
                        android:textColor="@color/blackText"
                        android:textSize="13sp"
                        android:layout_toRightOf="@+id/rangescolor"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="18dp">
                    <TextView
                        android:id="@+id/playscolor"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:background="#f4901b"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/copy_plays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="玩法:"
                        android:textColor="@color/blackText"
                        android:textSize="13sp"
                        android:layout_toRightOf="@+id/playscolor"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="18dp">
                    <TextView
                        android:id="@+id/contextscolor"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:background="#f04c4c"
                        android:layout_marginTop="6dp"
                        />
                    <TextView
                        android:id="@+id/copy_context"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="内容:"
                        android:textColor="@color/blackText"
                        android:textSize="13sp"
                        android:maxLines="20"
                        android:ellipsize="end"
                        android:layout_toRightOf="@+id/contextscolor"
                        android:layout_marginLeft="5dp"/>
                </RelativeLayout>
            </LinearLayout>
        </com.example.caikeplan.logic.scrollview.BorderScrollView>

        <LinearLayout
            android:id="@+id/copy_end"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@+id/myScrollView"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/copy_close"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="关闭"
                android:textColor="@color/blackText"
                android:background="@drawable/shape_item_back1"
                android:textSize="14sp"
                />

            <Button
                android:id="@+id/copy_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_item_back2"
                android:text="复制"
                android:textColor="@color/whileText"
                android:textSize="14sp"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>