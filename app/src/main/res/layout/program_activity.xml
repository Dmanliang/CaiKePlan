<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:background="@color/mainback"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <include
            android:id="@+id/program_toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <com.example.caikeplan.logic.refresh.SHSwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:guidance_text_color="@color/colorPrimary"
            app:guidance_view_bg_color="@color/transparent"
            app:load_text="加载更多"
            app:progress_bar_color="@color/colorPrimary"
            app:refresh_text="下拉刷新">
                <com.example.caikeplan.logic.refresh.ShareScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadingEdgeLength="0dp"
                    android:scrollbars="none"
                    android:id="@+id/scroll">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                                <RelativeLayout
                                    android:id="@+id/lottery_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                        <include
                                            android:id="@+id/lotterylayout"
                                            layout="@layout/lotterylayout"
                                            android:layout_width="match_parent"
                                            android:layout_height="180dp"/>
                                        <include
                                            android:id="@+id/pk10layout"
                                            layout="@layout/pk10layout"
                                            android:layout_width="match_parent"
                                            android:layout_height="180dp"
                                            android:visibility="gone"/>
                                        <include
                                            android:id="@+id/k3layout"
                                            layout="@layout/k3layout"
                                            android:layout_width="match_parent"
                                            android:layout_height="180dp"
                                            android:visibility="gone"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:id="@+id/recommend_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/lottery_layout"
                                    android:layout_marginTop="14dp">
                                        <include
                                            layout="@layout/recommend_plan"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:id="@+id/choice_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/recommend_layout"
                                    android:layout_marginTop="14dp">
                                        <include
                                            layout="@layout/choicelayout"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:id="@+id/lookthrough_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@+id/choice_layout"
                                    android:visibility="gone">
                                        <include
                                            layout="@layout/lookthrough"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/>
                                </RelativeLayout>
                                <!--<RelativeLayout
                                    android:id="@+id/hot_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/lookthrough_layout">
                                        <include
                                            layout="@layout/hotlayout"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/>
                                </RelativeLayout>-->
                        </RelativeLayout>
                </com.example.caikeplan.logic.refresh.ShareScrollView>
        </com.example.caikeplan.logic.refresh.SHSwipeRefreshLayout>
        <include
            layout="@layout/reload_internet"
            android:id="@+id/reload_internet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <include
                layout="@layout/no_data"
                android:id="@+id/no_data"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
</LinearLayout>
