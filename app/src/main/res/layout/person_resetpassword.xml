<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainback">

    <include
        android:id="@+id/resetpassword_toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/resetpassword_toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/username_layout"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="15dp"
                android:background="@color/whileBack">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/whileDivider"/>
                <ImageView
                    android:id="@+id/icon_resetpassword_username"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/icon_username"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/resetpassword_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前用户名:"
                    android:textSize="15sp"
                    android:textColor="@color/blackText"
                    android:layout_toRightOf="@+id/icon_resetpassword_username"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/whileDivider"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/newpassword_layout"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@color/whileBack">
                <ImageView
                    android:id="@+id/icon_newpassword"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/icon_lock"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:id="@+id/edit_newpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入新密码"
                    android:textSize="15sp"
                    android:textColorHint="@color/whileDivider"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/blackText"
                    android:background="@null"
                    android:layout_toRightOf="@+id/icon_newpassword"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLength="20"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/whileDivider"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/renewpassword_layout"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@color/whileBack">
                <ImageView
                    android:id="@+id/icon_renewpassword"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/icon_lock"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:id="@+id/edit_renewpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="再次输入新密码"
                    android:textSize="15sp"
                    android:textColorHint="@color/whileDivider"
                    android:textColor="@color/blackText"
                    android:background="@null"
                    android:layout_toRightOf="@+id/icon_renewpassword"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:imeOptions="actionGo"
                    android:ellipsize="end"
                    android:maxLength="20"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/whileDivider"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <Button
                android:id="@+id/resetpassword_button"
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:text="确认"
                android:textSize="15dp"
                android:textColor="@color/whileText"
                android:background="@drawable/shape_check_button"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"/>
        </LinearLayout>
        <include
            android:id="@+id/loading"
            layout="@layout/loadingdata"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />
    </RelativeLayout>

</RelativeLayout>