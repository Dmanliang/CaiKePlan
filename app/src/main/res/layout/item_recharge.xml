<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <RelativeLayout
        android:id="@+id/recharger_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/icon_coin"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/coin"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"/>
        <TextView
            android:id="@+id/recharge_time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="三个月套餐"
            android:layout_toRightOf="@+id/icon_coin"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="@color/balckText"/>
        <TextView
            android:id="@+id/old_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥240"
            android:textColor="@color/grayText4"
            android:layout_marginLeft="11dp"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/recharge_time"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/new_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥240"
            android:textColor="@color/redText"
            android:layout_marginLeft="11dp"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/old_value"
            android:layout_centerVertical="true"/>
        <RadioButton
            android:id="@+id/recharge_radiobutton"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:button="@null"
            android:background="@drawable/selector_radio"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:checked="false"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </RelativeLayout>

</RelativeLayout>