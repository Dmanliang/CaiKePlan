<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/editTitle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="100dp"
        android:background="#ededed">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以下内容均可编辑"
            android:textSize="13sp"
            android:textColor="@color/whileDivider"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/save_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存并复制"
            android:textColor="@color/redText"
            android:textSize="13sp"
            android:layout_marginRight="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdgeLength="0dp"
        android:scrollbarThumbVertical="@color/blueScroll"
        android:scrollbarSize="2dp"
        android:background="#fff"
        android:layout_below="@+id/editTitle">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/editContent"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <EditText
                    android:id="@+id/copy_plan_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="聚财盆"
                    android:textColor="@color/blackText"
                    android:textSize="13sp"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />
                <EditText
                    android:id="@+id/copy_content_title"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/copy_plan_title"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/blackText"
                    android:textCursorDrawable="@null"
                    android:textSize="13sp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />
            </RelativeLayout>
            <View
                android:id="@+id/dashline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/shape_dash"
                android:layout_below="@id/editContent"
                android:layerType="software"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                />
