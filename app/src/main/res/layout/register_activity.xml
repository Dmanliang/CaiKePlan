<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_loginback">
    <ImageView
        android:id="@+id/register_close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/icon_close"
        android:layout_margin="30dp"/>
    <ImageView
        android:id="@+id/register_logo"
        android:layout_height="144dp"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_logo"
        android:layout_marginTop="74dp"
        />
    <LinearLayout
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_logo"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_input">
            <ImageView
                android:id="@+id/icon_email"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_email"/>
            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:layout_centerVertical="true"
                android:hint="请输入邮箱"
                android:layout_toRightOf="@+id/icon_email"
                android:textColorHint="@color/whileDivider"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/emails_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_input"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/icon_code"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_verification"/>
            <EditText
                android:id="@+id/edit_code"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:hint="请输入验证码"
                android:layout_toRightOf="@+id/icon_code"
                android:textColorHint="@color/whileDivider"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:singleLine="true"
                android:imeOptions="actionGo"
                android:layout_toLeftOf="@+id/button_code"
                />
            <Button
                android:id="@+id/button_code"
                android:layout_width="81dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_login"
                android:text="获取验证码"
                android:textColor="@color/whileText"
                android:textSize="14sp"/>
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_below="@+id/edit_layout"
        android:background="@drawable/shape_login"
        android:layout_marginTop="27dp"
        android:text="确认"
        android:textColor="@color/whileBack"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系QQ客服: 961820000"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"/>
    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackHalfAlphaBlack"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>