<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mainback"
                android:visibility="gone">
    <ImageView
        android:id="@+id/no_data_icon"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:src="@drawable/no_data_icon"
        android:layout_marginTop="117dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/no_data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="暂无没有数据~~~"
        android:textSize="19sp"
        android:textColor="@color/balckText"
        android:layout_below="@+id/no_data_icon"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/dataload_button"
        android:layout_width="108dp"
        android:layout_height="32dp"
        android:layout_below="@+id/no_data_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="13sp"
        android:text="点击重新加载"
        android:textColor="@color/whileText"
        android:background="@drawable/shape_check_button"
        />

</RelativeLayout>
