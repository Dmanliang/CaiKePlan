<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mainback"
                tools:context=".activity.MainActivity" >
    <include
        android:id="@+id/personalcopy_toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/personalcopy_toolbar"
        android:background="#f6f6f6"
        android:fadingEdgeLength="0dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="14dp"
                android:background="@color/whileDivider" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff" >
                <View
                    android:id="@+id/headline"
                    android:layout_width="2dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:background="#1baaf4" />
                <TextView
                    android:id="@+id/headtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头部配置"
                    android:textColor="#1baaf4"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/headline"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"/>
                <ImageView
                    android:id="@+id/content_help"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/btn_help"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="0dp"
                android:background="@color/whileDivider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="默认：聚彩盆"
                    android:textColor="#808080"
                    android:textSize="15dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="0dp"
                android:background="@color/whileDivider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="替换："
                    android:textColor="#808080"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/personal_copy_head"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView5"
                    android:background="#00000000"
                    android:ems="16"
                    android:hint="输入要替换的内容（不输入为默认）"
                    android:textColorHint="#cccccc"
                    android:textColor="#808080"
                    android:textSize="14dp" />

                <requestFocus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="0dp"
                android:background="@color/whileDivider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="14dp"
                android:background="@color/whileDivider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff" >

                <View
                    android:id="@+id/centerline"
                    android:layout_width="2dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:background="#f04c4c" />
                <TextView
                    android:id="@+id/centertext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中部配置"
                    android:textColor="#f04c4c"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/centerline"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="0dp"
                android:background="@color/whileDivider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="默认：聚彩盆"
                    android:textColor="#808080"
                    android:textSize="15dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="0dp"
                android:background="@color/whileDivider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="替换："
                    android:textColor="#808080"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/personal_copy_mid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView8"
                    android:background="#00000000"
                    android:ems="16"
                    android:hint="输入要替换的内容（不输入为默认）"
                    android:textColorHint="#cccccc"
                    android:textColor="#808080"
                    android:textSize="14dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="0dp"
                android:background="@color/whileDivider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="14dp"
                android:background="@color/whileDivider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff" >
                <View
                    android:id="@+id/endline"
                    android:layout_width="2dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:background="#f4901b" />
                <TextView
                    android:id="@+id/endtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尾部配置"
                    android:textColor="#f4901b"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/endline"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="0dp"
                android:background="@color/whileDivider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="默认：聚彩盆，仅供参考"
                    android:textColor="#808080"
                    android:textSize="15dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="0dp"
                android:background="@color/whileDivider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="替换："
                    android:textColor="#808080"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/personal_copy_end"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView11"
                    android:background="#00000000"
                    android:ems="16"
                    android:hint="输入要替换的内容（不输入为默认）"
                    android:textColorHint="#cccccc"
                    android:textColor="#808080"
                    android:textSize="14dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="0dp"
                android:background="@color/whileDivider" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="14dp"
                android:background="@color/whileDivider" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff">
                <TextView
                    android:id="@+id/setdividtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="方案所带间隔符号"
                    android:textColor="#808080"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>
                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/comma"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:drawableLeft="@drawable/selector_radiobutton"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:text="逗号"
                        android:textColor="#808080"
                        android:drawablePadding="5dp"
                        android:textSize="15dp"
                        android:button="@null"/>
                    <RadioButton
                        android:id="@+id/blank"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:drawableLeft="@drawable/selector_radiobutton"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="17dp"
                        android:checked="true"
                        android:text="空格"
                        android:textColor="#808080"
                        android:drawablePadding="5dp"
                        android:textSize="15dp"
                        android:button="@null"/>
                    <RadioButton
                        android:id="@+id/vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:drawableLeft="@drawable/selector_radiobutton"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="17dp"
                        android:text="竖号"
                        android:textColor="#808080"
                        android:drawablePadding="5dp"
                        android:textSize="15dp"
                        android:button="@null"/>
                </RadioGroup>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="0dp"
                android:background="@color/whileDivider" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>